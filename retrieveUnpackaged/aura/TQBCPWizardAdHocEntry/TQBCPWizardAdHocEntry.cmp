<aura:component implements="flexipage:availableForAllPageTypes,force:appHostable" access="global" controller="TQBCPWizardController">

    <aura:attribute name="candPackage" type="TQB_Candidate_Package__c"/>
    <aura:attribute name="adHocEntry" type="TQB_Ad_Hoc_Entry__c"/>
    <aura:attribute name="messages" type="Aura.Component[]" access="GLOBAL"/>
    <aura:attribute name="loggedInUserRole" type="User" />
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />

    <div aura:id="messages">
      {!v.messages}
    </div>


    <tr>
      <th scope="row" data-label="Name">
        <div class="slds-truncate" title="Name">
          <a onclick="{!c.selectAdHocEntry}">{!v.adHocEntry.First_Name__c + ' ' + v.adHocEntry.Last_Name__c}</a>
        </div>
      </th>
      <td data-label="Mailing Address">
        <div class="slds-truncate" title="Mailing Address">{!v.adHocEntry.Mailing_Address__c + ', ' + v.adHocEntry.City__c + ' ' + v.adHocEntry.State__c + ' ' + v.adHocEntry.Postal_Code__c}</div>
      </td>
      <td data-label="Research Area">
        <div class="slds-truncate" title="Research Area">{!v.adHocEntry.Research_Area__c}</div>
      </td>
      <!--<td data-label="Phone">
        <div class="slds-truncate" title="Phone">{!v.adHocEntry.Phone__c}</div>
      </td>
      <td data-label="Email">
        <div class="slds-truncate" title="Email">{!v.adHocEntry.Email__c}</div>
      </td>-->
      <td data-label="Email">
        <aura:if isTrue="{!and(v.loggedInUserRole.UserRole.Name != 'TQB 1st Line Supervisor Role', v.loggedInUserRole.UserRole.Name != 'TQB 2nd Line Supervisor Role')}">
          <div class="slds-truncate" title="">
            <button type="button" class="slds-button slds-button--neutral" onclick="{!c.deleteAdHocEntry}">Delete</button>
          </div>
        </aura:if>
      </td>
    </tr>
</aura:component>