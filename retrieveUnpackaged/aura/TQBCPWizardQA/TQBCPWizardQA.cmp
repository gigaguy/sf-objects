<aura:component implements="flexipage:availableForAllPageTypes,force:appHostable" access="global" controller="TQBCPWizardController">

    <aura:attribute name="candPackage" type="TQB_Candidate_Package__c"/>
    <aura:attribute name="question" type="TQB_Candidate_Questionnaire__c"/>
    <aura:attribute name="questionIndex" type="String"/>
    <aura:attribute name="answerWithoutHtml" type="String"/>
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
    <aura:attribute name="messages" type="Aura.Component[]" access="GLOBAL"/>

    <div aura:id="messages">
      {!v.messages}
    </div>

    <tr>
      <th scope="row" data-label="Name">
        <div class="slds-truncate" title="Category">
          {!v.question.Category__c}
        </div>
      </th>
      <td data-label="Question" class="slds-cell-wrap">
        <div class="slds-truncate" title="Question">
          <a onclick="{!c.selectQuestion}">{!v.question.Question__c}</a>
        </div>
      </td>
      <td data-label="Question" class="slds-cell-wrap">
        <div class="slds-truncate" title="Answer" aura:id="answerDiv">
          {!v.answerWithoutHtml}
        </div>
      </td>
      <!--<ui:inputTextArea class="slds-textarea slds-size-1-of-2" aura:id="answer" placeholder="Please enter response here" value="{!question.Answer__c}"/>-->

    </tr>

</aura:component>